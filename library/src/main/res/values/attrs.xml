<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ScaledImageView">
        <attr name="original_width" format="integer" />
        <attr name="original_height" format="integer" />
    </declare-styleable>

    <!-- ClearEditText -->
    <declare-styleable name="ClearEditText">
        <!--<attr name="cet_"-->
    </declare-styleable>

    <!-- DropDownMenu -->
    <declare-styleable name="DropDownMenu">
        <!-- 显示内容的View -->
        <attr name="ddm_contentViewLayoutId" format="reference" />
        <!-- tab高度 -->
        <attr name="ddm_tabHeight" format="dimension" />
        <attr name="ddm_topLineHeight" format="dimension" />
        <attr name="ddm_bottomLineHeight" format="dimension" />
        <attr name="ddm_topLineColor" format="color" />
        <attr name="ddm_bottomLineColor" format="color" />
    </declare-styleable>

    <!-- 双向拖动SeekBar -->
    <declare-styleable name="RangeSeekBar">
        <!-- the minimum of the range -->
        <attr name="absoluteMinValue" format="integer|float" />

        <!-- the maximum of the range -->
        <attr name="absoluteMaxValue" format="integer|float" />

        <!-- the step value -->
        <attr name="step" format="integer|float" />

        <!-- show a single slider -->
        <attr name="singleThumb" format="boolean" />

        <!-- show the labels on the right and left-->
        <attr name="showLabels" format="boolean" />

        <!-- alwaysActive will make the buttons and bar always draw as the activeColor (the default is false) -->
        <attr name="alwaysActive" format="boolean" />

        <!-- show the currently selected value above each thumb (defaults to true) -->
        <attr name="valuesAboveThumbs" format="boolean" />

        <!-- padding on either side on the slider -->
        <attr name="internalPadding" format="dimension" />

        <!-- the height of the bar -->
        <attr name="barHeight" format="dimension" />

        <!-- the color of the bar that is not selected -->
        <attr name="defaultColor" format="color" />

        <!-- the color of the bar that is selected -->
        <attr name="activeColor" format="color" />

        <!-- the color of the text above thumbs -->
        <attr name="textAboveThumbsColor" format="color" />

        <!-- set drawables for thumb handles -->
        <attr name="thumbNormal" format="reference" />
        <attr name="thumbPressed" format="reference" />
        <attr name="thumbDisabled" format="reference" />

        <!-- thumb shadow specifications -->
        <attr name="thumbShadow" format="boolean" />
        <attr name="thumbShadowColor" format="color" />
        <attr name="thumbShadowXOffset" format="dimension" />
        <attr name="thumbShadowYOffset" format="dimension" />
        <attr name="thumbShadowBlur" format="dimension" />

        <!-- to activate the thumbs and texts when the min and max values are the default ones (defaults to false) -->
        <attr name="activateOnDefaultValues" format="boolean" />
    </declare-styleable>

    <!-- ScrollingImageView -->
    <declare-styleable name="ParallaxView">
        <attr name="speed" format="dimension" />
        <attr name="src" format="reference" />
        <attr name="sceneLength" format="integer" />
        <attr name="randomness" format="reference" />
        <attr name="initialState" format="enum">
            <enum name="started" value="0" />
            <enum name="stopped" value="1" />
        </attr>
    </declare-styleable>

    <!--GestureLock 手势密码 -->
    <declare-styleable name="GestureLock">
        <attr name="line_width" format="dimension" />
        <attr name="line_normal_color" format="color" />
        <attr name="line_error_color" format="color" />
    </declare-styleable>


    <declare-styleable name="TagCells">

        <!-- 标签的水平间距 -->
        <attr name="divide_horizontal" format="dimension" />
        <!-- 标签的垂直间距 -->
        <attr name="divide_vertical" format="dimension" />
        <!-- 标签的layout布局 -->
        <attr name="cell_layout_id" format="reference" />
        <!-- 每行的 标签 是否居中 -->
        <attr name="cell_is_center" format="boolean" />
        <!-- 是否只有一行标签 -->
        <attr name="singleline" format="boolean" />
        <!-- 是否显示添加 -->
        <attr name="show_add" format="boolean" />

        <attr name="add_layout_id" format="reference" />
        <!-- 是否显示展开收起 -->

        <attr name="show_expand" format="boolean" />

        <!-- 收起时最多显示多少行 -->
        <attr name="max_lines" format="integer" />
    </declare-styleable>

    <declare-styleable name="indicator">
        <attr name="indicator_drawable" format="reference"></attr>
        <attr name="indicator_margin" format="reference|dimension"></attr>
    </declare-styleable>

    <declare-styleable name="MaxHeightView">
        <attr name="mhv_HeightRatio" format="reference|float" />
        <attr name="mhv_HeightDimen" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="DKExpandTextLayout">
        <!-- 折叠状态的行数 -->
        <attr name="expand_collapsedLines" format="integer" />
        <!-- TextView id -->
        <attr name="expand_textId" format="reference" />
        <!-- 展开折叠View id -->
        <attr name="expand_toggleId" format="reference" />
        <!-- 点TextView是否触发折叠展开 -->
        <attr name="expand_toggleOnTextClick" format="boolean" />
    </declare-styleable>

    <!-- 自定义验证码输入框 -->
    <declare-styleable name="VerifyCodeInputView">
        <!--输入框的数量-->
        <attr name="vciv_et_number" format="integer" />
        <!--输入类型-->
        <attr name="vciv_et_inputType">
            <enum name="number" value="0" />
            <enum name="numberPassword" value="1" />
            <enum name="text" value="2" />
            <enum name="textPassword" value="3" />
        </attr>
        <!--输入框的高度-->
        <attr name="vciv_et_height" format="dimension" />
        <!--输入框文字颜色-->
        <attr name="vciv_et_text_color" format="color" />
        <!--输入框文字大小-->
        <attr name="vciv_et_text_size" format="dimension" />
        <!--输入框间距，不输入则代表平分-->
        <attr name="vciv_et_spacing" format="dimension" />
        <!--输入框背景色-->
        <attr name="vciv_et_background" format="reference|color" />
        <!--输入框焦点背景色-->
        <attr name="vciv_et_foucs_background" format="reference|color" />
        <!--输入框焦点宽度-->
        <attr name="vciv_et_cursor_width" format="dimension" />
        <!--输入框焦点高度-->
        <attr name="vciv_et_cursor_height" format="dimension" />
        <!--输入框焦点颜色-->
        <attr name="vciv_et_cursor_color" format="color" />
        <!--输入框下划线高度-->
        <attr name="vciv_et_underline_height" format="dimension" />
        <!--输入框无焦点的下划线颜色-->
        <attr name="vciv_et_underline_default_color" format="color" />
        <!--输入框有焦点的下划线颜色-->
        <attr name="vciv_et_underline_focus_color" format="color" />
        <!--输入框下划线是否展示-->
        <attr name="vciv_et_underline_show" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ExpandableLayout">
        <attr name="el_duration" format="integer" />
        <attr name="el_expanded" format="boolean" />
        <attr name="el_parallax" format="float" />
        <attr name="android:orientation" />
    </declare-styleable>
</resources>