<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_header_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="test header and footer" />

    <Button
        android:id="@+id/btn_linearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="test linearLayoutManager" />

    <Button
        android:id="@+id/btn_gridLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="test gridLayoutManager" />

    <Button
        android:id="@+id/btn_staggeredLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="test staggeredLayoutManager" />

</LinearLayout>